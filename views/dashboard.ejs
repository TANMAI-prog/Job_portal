<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5 text-center">
  <h2>Welcome, <%= user.name %></h2>
  <p>Role: <%= user.role %></p>

  <% if (user.role === 'Employer') { %>
    <a href="/jobs/post" class="btn btn-success m-2">Post a Job</a>
    <a href="/applications/view" class="btn btn-info m-2">View Applications</a>
  <% } else { %>
    <a href="/jobs/list" class="btn btn-primary m-2">View Available Jobs</a>
  <% } %>
</div>
