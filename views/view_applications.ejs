<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2 class="text-center mb-4">Applications Received</h2>

  <% applications.forEach(app => { %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <p><strong>Job:</strong> <%= app.job_title %></p>
        <p><strong>Candidate:</strong> <%= app.seeker_name %></p>
        <p><strong>Date:</strong> <%= app.apply_date.toDateString() %></p>

        <a href="/<%= app.resume %>" class="btn btn-outline-primary mb-2" download>Download Resume</a>

        <% if (app.status !== 'Shortlisted') { %>
          <form action="/applications/shortlist/<%= app.app_id %>" method="POST">
  <button type="submit" class="btn btn-success">Shortlist</button>
</form>

        <% } else { %>
          <span class="badge bg-success">Shortlisted</span>
        <% } %>
      </div>
    </div>
  <% }) %>

  <div class="text-center mt-3">
    <a href="/dashboard" class="btn btn-link">Back to Dashboard</a>
  </div>
</div>
